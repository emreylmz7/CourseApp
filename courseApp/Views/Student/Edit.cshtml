@model Student

<h2>Edit Student Information</h2>
<hr>

<div class="row">
    <div class="col-8">
        <form asp-controller="Student" asp-action="Edit" method="post">

            <input type="hidden" asp-for="StudentId">
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Student Name</label>
                <input asp-for="Name" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="LastName" class="form-label">Last Name</label>
                <input asp-for="LastName" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="Mail" class="form-label">Mail</label>
                <input asp-for="Mail" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="Phone" class="form-label">Phone</label>
                <input asp-for="Phone" class="form-control">
            </div>

            <button type="submit" class="btn btn-primary">Save</button>

        </form>

    </div>
    <div class="col-4">
        <h4>Courses</h4>
        <hr>
        <ul>
            @foreach(var item in @Model.Registries)
            {
                <li>@item.Course.Title</li>
            }
        </ul>
    </div>
</div>

