@model IEnumerable<Teacher>

<h2>Teacher Information Update</h2>
<hr>
<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th style="width: 150px;">@Html.DisplayNameFor(m => m.TeacherId)</th>
            <th>@Html.DisplayNameFor(m => m.Name)</th>
            <th>@Html.DisplayNameFor(m => m.LastName)</th>
            <th style="width: 150px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var teacher in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => teacher.TeacherId)</td>
                <td>@Html.DisplayFor(modelItem => teacher.Name)</td>
                <td>@Html.DisplayFor(modelItem => teacher.LastName)</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@teacher.TeacherId" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@teacher.TeacherId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
       
    </tbody>
</table>
<div class="text-center">
    <a href="/Teacher/Create" class="btn btn-success">Add Teacher</a>
</div>
